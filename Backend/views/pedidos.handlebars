<div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="page-header-title">
                        <h5 class="m-b-10">Pedidos </h5>
                    </div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>     
                        <li class="breadcrumb-item"><a href="#">Pedidos</a></li>                  
                        <li class="breadcrumb-item"><a href="#">{{type}}</a></li>                  
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- [ breadcrumb ] end -->
    <div class="pcoded-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                {{#each orders as |order|}}
                            <div class="card">
                                <div class="card-body">
                                    <div class="row align-items-center justify-contact-between">
                                        <div class="col">
                                            <a class="btn btn-primary" href="/dashboard/pedido/{{this.randDateId}}">
                                                {{this.randDateId}}
                                            </a>
                                        </div>
                                        <div class="col text-right">
                                            <button class="btn btn-outline-primary">
                                               {{parseStatus status}}
                                            </button>
                                        </div>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table m-0 mt-3">
                                            <tbody>
                                                {{#each this.pedido}}
                                            <tr>
                                                <td class="align-middle">
                                                    <img src="{{../../img_url}}{{image}}" alt="contact-img" title="contact-img" class="rounded mr-3" height="80" width="100">
                                                    {{!-- <div class="m-0 d-inline-block align-middle font-16">
                                                        <a href="#!" class="text-body">
                                                            <h6 class="d-inline-block">Amazing Rolling Chair</h6>
                                                        </a>
                                                        <br>
                                                        <span class="text-warning feather icon-star-on"></span>
                                                        <span class="text-warning feather icon-star-on"></span>
                                                        <span class="text-warning feather icon-star-on"></span>
                                                        <span class="text-warning feather icon-star-on"></span>
                                                        <span class="text-warning feather icon-star-on"></span>
                                                    </div> --}}
                                                   {{label}}
                                                </td>
                                                <td>
                                                    <h5>￠{{price}}</h5>
                                                </td>
                                                
                                            </tr>
                                            {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                    <hr class="mt-0">
                                    <div class="row align-items-center justify-contact-between">
                                        <div class="col">
                                            <span class="text-muted">Fecha de Pedido</span>
                                            <strong>{{dateToSpanish this.createdAt}}</strong>
                                        </div>
                                        <div class="col text-right">

                                            <span class="text-muted">Total</span>
                                            <strong>￠{{this.total}}</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{else}}
                            <p>No hay pedidos</p>
                            {{/each}}
                            
            </div>
            
        </div>
        <!-- [ Main Content ] end -->
    </div>

    <script>
        $(document).ready(function(){
            $('.goto-reports').on('click',function(e){
                e.preventDefault()
                window.location.href = '/dashboard/consultas'
            })

            $('.goto-create-reports').on('click',function(e){
                e.preventDefault()
                window.location.href = '/dashboard/reportes'
            })
        })
    </script>