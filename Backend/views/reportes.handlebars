                                    <div class="form-group col-md-6">
                                        <label for="inputEmail4">Segundo Nombre</label>
                                        <input type="text" class="form-control" id="name" placeholder="Segundo Nombre">
                                    </div>
                                
                                </div>

                                <div class="form-row">
                                
                                    <div class="form-group col-md-6">
                                        <label for="inputEmail4">Apellido</label>
                                        <input type="text" class="form-control" id="name" placeholder="Apellido">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="inputEmail4">Segundo Apellido</label>
                                        <input type="text" class="form-control" id="name" placeholder="Segundo Apellido">
                                    </div>
                                
                                </div>

                                <div class="form-row">
                                
                                    <div class="form-group col-md-6">
                                        <label for="inputEmail4">Tipo de Identificación</label>
                                        <select id="inputState" class="form-control">
                                            <option selected="">Seleccionar</option>
                                            <option>Cédula Costarricense</option>
                                            <option>Pasaporte</option>
                                            <option>Dimex</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="inputEmail4">Número de Identificación</label>
                                        <input type="text" class="form-control" id="name" placeholder="Número de Identificación">
